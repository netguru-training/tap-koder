= bootstrap_form_for(offer, layout: :horizontal, label_col: "col-sm-4 ", control_col: "col-sm-4") do |f|
  - if offer.errors.any?
    #error_explanation
      %h2
        = pluralize(offer.errors.count, "error")
        prohibited this offer from being saved:
      %ul
        - offer.errors.full_messages.each do |message|
          %li= message
  = f.text_field :name
  = f.text_area :description
  = f.number_field :code_limit
  = f.form_group do
    %p Start date
    = datetime_select("offer", "start_date")
  = f.form_group do
    = f.submit "Create offer", class: "btn-primary"

