= form_for(offer) do |f|
  - if offer.errors.any?
    #error_explanation
      %h2
        = pluralize(offer.errors.count, "error")
        prohibited this offer from being saved:
      %ul
        - offer.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    %p Start date
    = datetime_select("offer", "start_date")
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :code_limit
    %br/
    = f.number_field :code_limit
  .actions
    = f.submit
