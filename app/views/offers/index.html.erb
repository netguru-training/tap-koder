<h1>Listing offers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Destription</th>
      <th>User</th>
      <th>Code limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.name %></td>
        <td><%= offer.destription %></td>
        <td><%= offer.user %></td>
        <td><%= offer.code_limit %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
